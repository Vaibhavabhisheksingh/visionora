<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    
    <h2 class="fw-bold mb-3">Book Appointment</h2>

    <div class="card p-4 shadow-sm rounded-4">
        
        <!-- Doctor Info Display -->
        <h4 class="mb-1"><%= specialist.name %></h4>
        <p class="text-muted"><%= specialist.specialization %></p>
        <p><strong>Fees:</strong> â‚¹<%= specialist.fees %></p>
        <p><strong>Location:</strong> <%= specialist.location %></p>

        <form 
            action="/appointments/<%= specialist._id %>" 
            method="POST"
            class="mt-3">

            <label class="form-label fw-semibold">Choose Appointment Time</label>
            <input type="datetime-local" name="appointmentTime" class="form-control mb-3" required>

            <button class="btn btn-success w-100 rounded-pill">Confirm Appointment</button>
        </form>

    </div>

</div>
