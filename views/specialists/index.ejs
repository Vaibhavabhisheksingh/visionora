<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h1 class="mb-4">Eye Specialists</h1>

    <div class="row">
        <% allSpecialists.forEach(s => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="<%= s.image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= s.name %></h5>
                        <p class="card-text">Specialization: <%= s.specialization %></p>
                        <p class="card-text">Experience: <%= s.experience %> years</p>
                        <p class="card-text">Fees: â‚¹<%= s.fees %></p>
                        <a href="/specialists/<%= s._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
