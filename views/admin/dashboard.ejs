<% layout("/layouts/boilerplate") %>

<div class="admin-wrapper">

    <!-- Sidebar -->
    <aside class="admin-sidebar shadow-sm">
        <h4 class="admin-logo">
            <i class="fa-solid fa-glasses me-2"></i> Visionora
        </h4>

        <ul class="admin-nav">
            <li><a class="active" href="/admin"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
            <li><a href="/admin/users"><i class="fa-solid fa-users"></i> Users</a></li>
            <li><a href="/admin/products"><i class="fa-solid fa-box"></i> Products</a></li>
            <li><a href="/admin/specialists"><i class="fa-solid fa-user-doctor"></i> Specialists</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">

        <h1 class="fw-bold mb-4">Dashboard Overview</h1>

        <div class="row g-4">

            <div class="col-md-3">
                <a href="/admin/products" class="stat-card shadow-sm">
                    <i class="fa-solid fa-box stat-icon"></i>
                    <h2><%= totalProducts %></h2>
                    <p>Products</p>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/admin/specialists" class="stat-card shadow-sm">
                    <i class="fa-solid fa-user-doctor stat-icon"></i>
                    <h2><%= totalSpecialists %></h2>
                    <p>Specialists</p>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/admin/users" class="stat-card shadow-sm">
                    <i class="fa-solid fa-users stat-icon"></i>
                    <h2><%= totalUsers %></h2>
                    <p>Users</p>
                </a>
            </div>

        </div>

    </main>

</div>
<style>

    /* MAIN WRAPPER */
.admin-wrapper {
    display: flex;
    height: calc(100vh - 70px);
    background: #f8f9fb;
}

/* SIDEBAR */
.admin-sidebar {
    width: 260px;
    background: #ffffff;
    padding: 25px 20px;
    border-right: 1px solid #e5e5e5;
}

.admin-logo {
    font-weight: 700;
    text-align: center;
    margin-bottom: 40px;
    color: #111;
}

.admin-nav {
    list-style: none;
    padding: 0;
}

.admin-nav li {
    margin: 15px 0;
}

.admin-nav a {
    text-decoration: none;
    color: #555;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 10px;
    border-radius: 10px;
    transition: all 0.3s;
}

.admin-nav a:hover,
.admin-nav a.active {
    background: #111;
    color: #fff;
}

/* MAIN CONTENT AREA */
.admin-main {
    flex-grow: 1;
    padding: 40px;
    overflow-y: auto;
}

/* STAT CARDS */
.stat-card {
    display: block;
    background: white;
    padding: 25px;
    border-radius: 20px;
    text-align: center;
    transition: 0.3s;
    text-decoration: none;
    color: inherit;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
}

.stat-icon {
    font-size: 2.2rem;
    color: #111;
    margin-bottom: 8px;
}

.stat-card h2 {
    font-size: 2rem;
    font-weight: 700;
}

.stat-card p {
    color: #777;
    margin: 0;
}


</style>