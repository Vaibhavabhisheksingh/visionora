<!-- FLASH MESSAGE WRAPPER -->
<div id="flash-container">

  <% if (success && success.length) { %>
    <div class="custom-flash flash-success">
      <i class="fa-solid fa-circle-check me-2"></i>
      <%= success %>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="custom-flash flash-error">
      <i class="fa-solid fa-triangle-exclamation me-2"></i>
      <%= error %>
    </div>
  <% } %>

</div>

<style>

#flash-container {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2000;
    display: flex;
    justify-content: center;
}

.custom-flash {
    min-width: 300px;
    max-width: 500px;
    padding: 14px 22px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 8px;

    color: #0d0d0d;
    background: #f8f9fa;

    border: 1px solid transparent;
    box-shadow: 0px 4px 15px rgba(0,0,0,0.12);

    animation: fadeIn 0.4s ease-out;
    opacity: 1;
}

.flash-success {
    border-color: #00b894;
    box-shadow: 0px 4px 20px rgba(0, 184, 148, 0.25);
}

.flash-error {
    border-color: #d63031;
    box-shadow: 0px 4px 20px rgba(214, 48, 49, 0.25);
}

/* Fade in animation */
@keyframes fadeIn {
    from { opacity: 0; transform: translate(-50%, -15px); }
    to   { opacity: 1; transform: translate(-50%, 0px); }
}

/* Fade out animation */
.fade-out {
    animation: fadeOut 0.5s forwards;
}

@keyframes fadeOut {
    from { opacity: 1; }
    to   { opacity: 0; transform: translate(-50%, -10px); }
}
</style>

<script>
  setTimeout(() => {
    const flash = document.querySelector(".custom-flash");
    if (flash) {
      flash.classList.add("fade-out");
      setTimeout(() => flash.remove(), 500);
    }
  }, 3000); // 3 seconds
</script>
