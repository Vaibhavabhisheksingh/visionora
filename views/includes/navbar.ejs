<style>
  /* Smooth transition */
  body, .navbar, .card, .dropdown-menu {
      transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* Dark Mode */
  body.dark-mode {
      background-color: #121212;
      color: #eaeaea;
  }

  .navbar.dark-mode {
      background-color: #1f1f1f !important;
  }

  .card.dark-mode {
      background-color: #1e1e1e;
